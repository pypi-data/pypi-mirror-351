<odoo>
    <record id="view_stock_configuration" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//block[@id='sale_product_catalog_settings']"
                position="inside"
            >
                <setting
                    id="regular_products_limit"
                    string="Regular Products Limit"
                    help="Define the number of regular products you want to display in the e-commerce catalog."
                >
                    <field name="regular_products_limit" />
                </setting>
            </xpath>
        </field>
    </record>
</odoo>

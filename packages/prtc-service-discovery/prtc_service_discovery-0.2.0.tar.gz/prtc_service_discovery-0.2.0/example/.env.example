# Consul configuration
CONSUL_HOST=localhost
CONSUL_PORT=8500

# Service access configuration (how other services reach this service)
ACCESS_HOST=localhost
ACCESS_PORT=8000

# Optional: Health check configuration (defaults to access config if not set)
# HEALTH_HOST=localhost
# HEALTH_PORT=8000

# Enable Consul registration
ENABLE_REGISTRATION=true

# Example with Docker networking
# CONSUL_HOST=consul
# CONSUL_PORT=8500
# ACCESS_HOST=example-app
# ACCESS_PORT=8000
# ENABLE_REGISTRATION=true
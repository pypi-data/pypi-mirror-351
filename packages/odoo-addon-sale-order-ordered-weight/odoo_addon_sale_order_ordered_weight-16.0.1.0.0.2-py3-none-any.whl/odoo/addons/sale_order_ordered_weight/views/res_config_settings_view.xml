<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <div id="sale_config_online_confirmation_sign" position="before">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="display_line_weight_on_sale_report" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="display_line_weight_on_sale_report" />
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="display_order_weight_on_sale_report" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="display_order_weight_on_sale_report" />
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>

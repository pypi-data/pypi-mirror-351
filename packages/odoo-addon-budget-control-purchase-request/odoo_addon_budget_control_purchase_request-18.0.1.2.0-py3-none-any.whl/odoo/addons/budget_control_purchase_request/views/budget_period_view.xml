<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="budget_period_view_form" model="ir.ui.view">
        <field name="name">budget.period.view.form</field>
        <field name="model">budget.period</field>
        <field name="inherit_id" ref="budget_control.budget_period_view_form" />
        <field name="arch" type="xml">
            <!-- Add purchase request before purchase -->
            <xpath expr="//label[@for='purchase']" position="before">
                <label
                    for="purchase_request"
                    class="d-none"
                    invisible="not control_budget"
                />
                <div invisible="not control_budget">
                    <field name="purchase_request" class="oe_inline" nolabel="1" />
                    <label for="purchase_request" class="o_form_label oe_inline" />
                </div>
            </xpath>
        </field>
    </record>
</odoo>

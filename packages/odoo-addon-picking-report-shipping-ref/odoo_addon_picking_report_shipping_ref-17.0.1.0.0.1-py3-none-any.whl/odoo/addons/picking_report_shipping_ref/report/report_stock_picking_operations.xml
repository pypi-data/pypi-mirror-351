<odoo>
    <template
        id="stock_report_shipping_ref_report_picking"
        name="stock.report.shipping.ref.report_picking"
        inherit_id="stock.report_picking"
    >
        <xpath expr="//div[@name='div_outgoing_address']" position="inside">
            <t t-if="o.partner_id.ref">
                <span>
                    <t t-if="o.company_id.delivery_shipping_ref_label">
                        <span t-esc="o.company_id.delivery_shipping_ref_label" />
                    </t>
                    <t t-else="">
                        <span>Shipping Address Ref.</span>
                    </t>
                    : <span t-field="o.partner_id.ref" />
                </span>
            </t>
        </xpath>
    </template>
</odoo>

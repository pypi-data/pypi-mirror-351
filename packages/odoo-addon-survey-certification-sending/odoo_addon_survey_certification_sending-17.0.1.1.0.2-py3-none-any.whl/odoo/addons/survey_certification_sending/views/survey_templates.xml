<odoo>
    <template id="survey_fill_form_done" inherit_id="survey.survey_fill_form_done">
        <xpath
            expr="//div[a[contains(@t-att-href, '/survey/%s/get_certification')]]"
            position="attributes"
        >
            <attribute
                name="t-if"
            >survey.certification and (not survey.skip_certification_email and not answer.partner_id.skip_certification_email)</attribute>
        </xpath>
    </template>
</odoo>

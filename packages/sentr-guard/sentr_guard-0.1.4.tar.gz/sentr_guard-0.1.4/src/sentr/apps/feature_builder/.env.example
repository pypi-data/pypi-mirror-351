# Sentr Feature Loader Environment Variables
# Copy this file to .env and adjust values as needed

# Kafka Configuration
KAFKA_BOOTSTRAP=localhost:9092
KAFKA_GROUP_ID=sentr-feature-loader
KAFKA_TOPIC=tx_enriched
KAFKA_BATCH_SIZE=100
KAFKA_BATCH_TIMEOUT_MS=1000
KAFKA_RETRY_ATTEMPTS=5

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_FEATURE_TTL=3600
REDIS_MAX_RETRIES=5
REDIS_RETRY_DELAY=1.0
REDIS_MAX_RETRY_DELAY=30.0
REDIS_MEMORY_LIMIT=512MB
REDIS_MEMORY_POLICY=volatile-lfu
REDIS_CIRCUIT_THRESHOLD=3
REDIS_CIRCUIT_TIMEOUT=5
REDIS_TIMEOUT_FACTOR=2.0
REDIS_MAX_TIMEOUT=60
REDIS_PIPELINE_SIZE=100
REDIS_PIPELINE_FLUSH_MS=100

# Feature Window Configuration
WINDOW_SIZE=60
WINDOW_MAX_SIZE=1000
LONG_WINDOW_SIZE=604800
LONG_WINDOW_MAX_SIZE=100000
EDGE_TYPES=card_ip

# Processing Configuration
FEATURE_UPDATE_INTERVAL_MS=1000
WINDOW_CLEANUP_FREQUENCY=1000

# Monitoring Configuration
HEALTH_CHECK_PORT=8082
LOG_LEVEL=INFO

# Alert Thresholds
MEMORY_ALERT_THRESHOLD=0.8
EVICTION_ALERT_THRESHOLD=0

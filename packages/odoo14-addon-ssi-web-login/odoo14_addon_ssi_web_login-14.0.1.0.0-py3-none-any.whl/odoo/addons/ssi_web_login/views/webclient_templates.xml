<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="ssi_web_login.login" inherit_id="web.login" name="SSI Web Login">
        <xpath expr="//div[@class='form-group field-login']" position="replace">
            <div class="form-group field-login">
                <label for="login">Username</label>
                <input
                    type="text"
                    placeholder="Email"
                    name="login"
                    t-att-value="login"
                    id="login"
                    t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                    required="required"
                    autofocus="autofocus"
                    autocapitalize="off"
                />
            </div>
        </xpath>
    </template>
</odoo>

# Include the README
include README.md

# Include the license file
include LICENSE

# Include attribution and credit files
include AUTHORS.md
include CREDITS.md
include CHANGELOG.md

# Include py.typed marker for type hints
include src/swent/py.typed

# Include all example scripts
recursive-include examples *.py

# Include documentation source files
recursive-include docs *.md
include mkdocs.yml

# Include configuration files for development
include .pre-commit-config.yaml
include pyproject.toml

# Exclude development and test files from distribution
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
recursive-exclude tests *
recursive-exclude * *.pyc
recursive-exclude * *.pyo
recursive-exclude * *.orig
recursive-exclude .git *
recursive-exclude .github *
recursive-exclude .mypy_cache *
recursive-exclude .pytest_cache *
recursive-exclude .coverage
exclude .gitignore
exclude .gitattributes
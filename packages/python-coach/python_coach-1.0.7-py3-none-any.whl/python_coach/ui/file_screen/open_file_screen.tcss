OpenFileScreen {
    align: center top;
    
    
    #dialog {
        margin-top: 2;
        grid-size: 1 3;
        grid-gutter: 1;
        grid-rows: auto 1fr 3;
        padding: 1;
        width: 70;
        height: 80%;
        border: solid $background 100%;
        background: $surface;

        #open {
            margin-right: 1;
        }
    }
}
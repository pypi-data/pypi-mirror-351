Screen {
    align: center middle;
}

Label {
    content-align: center middle;
    width: 100%;
    height: 100%;
}

Grid {
    height: 70%;
    width: 40%;
    grid-rows: 1fr auto auto 5;  
    grid-gutter: 1;
}

Horizontal {
    align: center middle;
    padding-left: 1;
    padding-right: 1;

    #login_button {
        margin-right: 1;
    }

    Button {
        width: 1fr;
    }
}
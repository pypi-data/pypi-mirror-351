{% from "components/form.html.j2" import render_field %}
{% from "components/common.html.j2" import render_card_header %}

{% macro render_form(view, item=None) %}
    <div class="card">
        {{ render_card_header(view) }}
        <div id="collapse-{{ view.id }}" class="card-body collapse {% if not view.collapsed %}show{% endif %}">
            <form action="{{ view.action }}" method="{{ view.method }}">
                {% for field in view.form %}
                    {{ render_field(field) }}
                {% endfor %}
                <button type="submit" class="btn btn-primary">{{ view.submit_label | default('Submit') }}</button>
            </form>
        </div>
    </div>
{% endmacro %}

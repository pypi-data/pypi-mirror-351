# ==================== ОСНОВНАЯ КОНФИГУРАЦИЯ ====================
# Копируйте в .env и заполните своими данными

# Telegram Bot Token (получите у @BotFather)
TELEGRAM_TOKEN=your_bot_token_here

# Чат ID группы для мониторинга (необязательно, бот работает в любых группах)
GROUP_CHAT_ID=-your_group_chat_id

# ==================== LLM API ====================
# Ваш LLM провайдер (OpenAI-совместимый)
LLM_PROXY_API_BASE_URL=https://your-llm-api-endpoint.com
LLM_PROXY_API_KEY=your_api_key_here

# ==================== РЕЖИМ РАБОТЫ ====================
# polling - для демонстрации и разработки (по умолчанию)
# webhook - для продакшн-серверов
DEPLOYMENT_MODE=polling

# ==================== НАСТРОЙКИ БРАУЗЕРА ====================
# Для работы на серверах без GUI установите true
PLAYWRIGHT_HEADLESS=false
PLAYWRIGHT_TIMEOUT=30000

# Для серверов Linux добавьте:
# PLAYWRIGHT_NO_SANDBOX=true
# PLAYWRIGHT_DISABLE_WEB_SECURITY=true

# ==================== WEBHOOK (ДЛЯ ПРОДАКШНА) ====================
# Настройте только если используете webhook режим
WEBHOOK_HOST=your-domain.com
WEBHOOK_PORT=8443
WEBHOOK_PATH=/webhook

# ==================== CHROMADB ====================
# OpenAI API ключ для эмбеддингов ChromaDB (может быть тот же, что выше)
CHROMA_OPENAI_API_KEY=your_openai_api_key_here

# ==================== ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ====================
# Логирование
LOG_LEVEL=INFO

# Отключение предупреждений HuggingFace
TOKENIZERS_PARALLELISM=false 
# Production Configuration for Unified Telegram Bot
# Copy this to .env for production deployment

# ==================== TELEGRAM SETTINGS ====================
TELEGRAM_TOKEN=your_bot_token_here
GROUP_CHAT_ID=-4864366522

# ==================== WEBHOOK SETTINGS ====================
# Set these for webhook mode (production recommended)
WEBHOOK_HOST=your-domain.com
WEBHOOK_PORT=8443
WEBHOOK_PATH=/webhook

# ==================== LLM SETTINGS ====================
LLM_PROXY_API_BASE_URL=https://chatwm.ru/f47db70ec76d1d333be922d9587fe825
LLM_PROXY_API_KEY=your_api_key_here

# ==================== PLAYWRIGHT SETTINGS (HEADLESS) ====================
# Browser configuration for production servers
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_NO_SANDBOX=true
PLAYWRIGHT_DISABLE_WEB_SECURITY=true
PLAYWRIGHT_DISABLE_DEV_SHM_USAGE=true

# Browser timeouts (milliseconds)
PLAYWRIGHT_BROWSER_TIMEOUT=30000
PLAYWRIGHT_PAGE_TIMEOUT=20000
PLAYWRIGHT_NAVIGATION_TIMEOUT=15000

# ==================== PERFORMANCE OPTIMIZATION ====================
# Request delays to avoid rate limiting
REQUEST_DELAY=2000
USER_AGENT="Mozilla/5.0 (Linux; X11; X86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"

# Tokenizers optimization (for HuggingFace warnings)
TOKENIZERS_PARALLELISM=false

# ==================== LOGGING ====================
LOG_LEVEL=INFO
MCP_LOG_LEVEL=WARNING

# ==================== CHROMADB SETTINGS ====================
CHROMA_OPENAI_API_KEY=your_openai_key_for_chromadb_here

# ==================== DEPLOYMENT MODE ====================
# Set to 'webhook' for production, 'polling' for development
DEPLOYMENT_MODE=webhook 
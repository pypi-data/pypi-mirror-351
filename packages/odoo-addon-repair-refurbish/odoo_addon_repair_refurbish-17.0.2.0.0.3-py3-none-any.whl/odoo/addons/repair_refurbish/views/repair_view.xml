<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_repair_order_tree" model="ir.ui.view">
        <field name="name">repair.order.tree</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_tree" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="refurbish_product_id" />
            </field>
        </field>
    </record>

    <record id="view_repair_order_form" model="ir.ui.view">
        <field name="name">repair.order.form</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//group[@name='locations']/field[@name='location_id']"
                position="after"
            >
                <field
                    name="location_dest_id"
                    invisible="not to_refurbish"
                    required="to_refurbish"
                />
            </xpath>
            <xpath expr="//group[1]" position="inside">
                <group>
                    <field name="to_refurbish" />
                </group>
                <group invisible="not to_refurbish">
                    <field name="refurbish_product_id" required="to_refurbish" />
                    <field name="refurbish_tracking" invisible="1" />
                    <field
                        name="refurbish_lot_id"
                        domain="[('product_id', '=', refurbish_product_id)]"
                        context="{'default_product_id': refurbish_product_id, 'default_company_id': company_id}"
                        groups="stock.group_production_lot"
                        invisible="refurbish_tracking not in ['serial', 'lot']"
                    />
                    <field
                        name="refurbish_location_dest_id"
                        required="to_refurbish"
                        groups="stock.group_stock_multi_locations"
                    />
                </group>
            </xpath>
            <field name="move_ids" position='attributes'>
                <attribute
                    name='context'
                > {'default_repair_id': id, 'default_product_uom_qty': 1,
                    'default_company_id': company_id, 'default_date': schedule_date,
                    'default_repair_line_type': 'add','to_refurbish': to_refurbish}
                </attribute>
            </field>
        </field>
    </record>
    <record id="view_repair_order_form_filter" model="ir.ui.view">
        <field name="name">repair.order.select</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form_filter" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="to_refurbish" />
                <field name="refurbish_product_id" />
            </field>
        </field>
    </record>
</odoo>

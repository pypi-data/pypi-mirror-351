<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hs_code_tax_rate_view_search" model="ir.ui.view">
        <field name="name">hs.code.tax.rate.search</field>
        <field name="model">hs.code.tax.rate</field>
        <field name="arch" type="xml">
            <search string="Search H.S. Code Tax Rates">
                <field name="hs_code_id" />
                <field name="origin_country_id" />
                <group expand="0" name="group_by" string="Group By">
                    <filter
                        name="group_origin_country"
                        string="Origin Country"
                        domain="[]"
                        context="{'group_by' : 'origin_country_id'}"
                    />
                    <filter
                        name="group_hs_code"
                        string="H.S. Code"
                        domain="[]"
                        context="{'group_by': 'hs_code_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="view_hs_code_tax_rate_form" model="ir.ui.view">
        <field name="name">hs.code.tax.rate.form</field>
        <field name="model">hs.code.tax.rate</field>
        <field name="arch" type="xml">
            <form string="H.S. Code Tax Rate">
                <group name="main">
                    <field name="hs_code_id" />
                    <field name="origin_country_id" />
                    <field name="tax_rate" />
                </group>
            </form>
        </field>
    </record>
    <record id="view_hs_code_tax_rate_list" model="ir.ui.view">
        <field name="name">hs.code.tax.rate.list</field>
        <field name="model">hs.code.tax.rate</field>
        <field name="arch" type="xml">
            <list string="hs.code.tax.rate">
                <field name="hs_code_id" />
                <field name="origin_country_id" />
                <field name="tax_rate" />
            </list>
        </field>
    </record>

    <!-- menus -->
    <record model="ir.actions.act_window" id="action_hs_code_tax_rate">
        <field name="name">H.S. Code Tax Rate</field>
        <field name="res_model">hs.code.tax.rate</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- product_harmonized_system_stock create its entry in seq = 60 -->
    <menuitem
        id="hs_code_tax_rate_menu"
        action="action_hs_code_tax_rate"
        parent="stock.menu_product_in_config_stock"
        sequence="61"
    />
</odoo>
